[[source]]
url = "https://pypi.org/simple"
verify_ssl = true
name = "pypi"

[packages]
aiohttp = "*"
aiortc = "*"
pillow = "*"
pyvirtualcam = "*"
numpy = "*"
pythonlangutil = "*"
"infi.systray" = "*"
pyqrcode = "*"

[dev-packages]
autopep8 = "*"
mypy = "*"
isort = "*"
pydocstyle = "*"

[requires]
python_version = "3.9"

[scripts]
ssl_gencerts = "mkdir -p certs && openssl req -x509 -newkey rsa:4096 -keyout certs/selfsigned.pem -out certs/selfsigned.cert -days 365 -nodes"
install_dlls = "python .scripts/install_dlls.py"
uninstall_dlls = "python .scripts/uninstall_dlls.py"
start = "python main.py"
dev = "nodemon --watch main.py --watch mimic --ext py --exec python main.py" # Requires that nodemon is installed globally, this can be installed with `npm i -g nodemon`
lint = "pipenv run lint-imports && pipenv run lint-code"
lint-imports = "isort ."
lint-code = "autopep8 --in-place --recursive ."
lint-type_checking = "mypy . --ignore-missing-imports"
